
@{
    ViewBag.Title = "Index";
}

<div class="account">
    <div class="menu-bar">
        <div class="account-manage container active" >
            <a><h4>Account Settings</h4></a>
        </div>
        <hr />
        <div class="profile-manage active" id="accountId1" >
            <a><h5 id="phead" style="color: #ccc8c8;">Profile Settings</h5></a>
        </div>
        <hr />
        <div class="address-manage " id="accountId">
            <a><h5 id="ahead">Address Settings</h5></a>
        </div>
        <hr />
    </div>
    <div class="account-body">
        <div class="container">
            <div class="card">
                <div class="card-body">

                </div>
            </div>
        </div>
    </div>
</div>
<link href="~/Content/master.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script>
    $(document).ready(function () {
        $("#accountId").mouseenter(function () {

            $("#phead").css("color","black")
            $("#ahead").css("color","#ccc8c8")
        })
        $("#accountId1").mouseenter(function () {

            $("#phead").css("color", "#ccc8c8")
            $("#ahead").css("color", "black")
        })
    })
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
}

