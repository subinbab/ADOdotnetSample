}

<div class="account">
    <div class="menu-bar">
        <div class="account-manage container active" >
            <a href="#" class="active">
                <span class="icon"><i class="fas fa-chart-pie"></i></span>
                <span class="list">Profile</span>
            </a>
        </div>
        <hr />
        <div class="profile-manage container active" id="accountId1">
